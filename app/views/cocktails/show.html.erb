    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2><%= @cocktail.name %></h2>
          <h4>Recipe</h4>
          <% @cocktail.doses.each do |dose| %>
          <%= dose.description %>
          <p>Ingredient:
            <%= dose.ingredient.name %>
          </p>
          <% end %>
          <ul class="list-inline">
            <li>
              <%= link_to(edit_cocktail_path) do %>
              <i class="far fa-edit"></i>
              Edit
              <% end %>
            </li>
            <li>
              <%= link_to(cocktails_path) do %>
              <i class="fas fa-undo"></i>
              Back to List
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

