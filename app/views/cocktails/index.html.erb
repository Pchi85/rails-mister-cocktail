<div class="container-main">
  <div class="navbar-wagon">
    <!-- Logo -->
    <a href="/" class="navbar-wagon-brand">
    <img src="https://www.artistshot.com/assets-3/images/admin/designs/106835/106835-250x250.png" alt="logo">
  </a>
    <!-- Right Navigation -->
    <h1 id="header-text">The House of Blue Leaves</h1>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to "Home", cocktails_path %>
      <!-- Profile picture with dropdown list -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <img src="https://cdn-images-1.medium.com/max/1225/1*0AEydt0Wm1HD-b2nRD23zQ.jpeg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
      </div>
        </div>
      </div>
    </div>
    <div class="banner" style="background-image: url('https://images.alphacoders.com/292/thumb-1920-29241.jpg');">
      <div class="container">
        <h1 class="text-center">Popular Drinks</h1>
        <div class="cards">
          <% @cocktails.each do |cocktail| %>
            <div class="card">
                <div class="card-body">
                    <div class="card-image">
                      <div class="card-image-hover">
                        <p>
                        <%= link_to cocktail.name, cocktail_path(cocktail) %>
                        </p>
                      </div>
                    </div>
                    <div class="card-footer">
                        <ul class="list-inline">
                            <li>
                              <%= link_to "", cocktail_path(cocktail),
                              method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: 'glyphicon glyphicon-trash' %></li>
                            <li>
                              <%= link_to(edit_cocktail_path(cocktail)) do %>
                              <i class="far fa-edit"></i>
                              <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

            <p>
                <%= link_to(new_cocktail_path) do %>
                <i class="fas fa-glass-martini"></i>
                Add a new cocktail
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>



